---
import { getLangFromUrl } from '../i18n/utils';
import Nav from '../components/navigation/Nav.astro';
import Footer from '../components/footer/Footer.astro';
import '../styles/global.css';
import '../styles/animations.css';

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const isRTL = lang === 'ar';
---

<!doctype html>
<html lang={lang} dir={isRTL ? 'rtl' : 'ltr'} class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Zagros Trading - Your trusted partner in agricultural solutions. We provide premium fertilizers, pesticides, and agricultural consultancy services." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={`min-h-full flex flex-col bg-gray-50 ${isRTL ? 'font-arabic' : ''}`}>
		<Nav />
		<main class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
	}
</style>
