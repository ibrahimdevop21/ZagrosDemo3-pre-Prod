---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { companyData } from '../../data/company';
import Logo from '../navigation/Logo.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isArabic = lang === 'ar';
---

<footer class="bg-gradient-to-b from-green-900 to-green-950 text-white relative overflow-hidden mt-auto">
  <!-- Decorative Elements -->
  <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-5"></div>
  <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-green-500/20 to-transparent"></div>

  <div class="relative container mx-auto px-4 pt-16 pb-8">
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-12 mb-16">
      <!-- Company Info -->
      <div class={`space-y-8 ${isArabic ? 'text-right' : ''}`}>
        <div>
          <Logo class="h-12 w-auto mb-6 inline-block" />
          <p class="text-green-100/80 leading-relaxed">
            {isArabic ? companyData.company.description_ar : companyData.company.description}
          </p>
        </div>
        <div class={`flex items-center gap-4 ${isArabic ? 'flex-row-reverse' : ''}`}>
          <a href="#" class="text-green-100/80 hover:text-white hover:bg-white/10 transition-all p-2.5 rounded-lg">
            <span class="sr-only">Facebook</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#" class="text-green-100/80 hover:text-white hover:bg-white/10 transition-all p-2.5 rounded-lg">
            <span class="sr-only">Instagram</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#" class="text-green-100/80 hover:text-white hover:bg-white/10 transition-all p-2.5 rounded-lg">
            <span class="sr-only">Twitter</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class={`space-y-6 ${isArabic ? 'text-right' : ''}`}>
        <h3 class="text-lg font-semibold text-white relative inline-block">
          {isArabic ? 'روابط سريعة' : 'Quick Links'}
          <div class="absolute -bottom-2 left-0 right-0 h-0.5 bg-green-500/30"></div>
        </h3>
        <ul class="space-y-3">
          <li>
            <a 
              href={`/${lang}/products`.replace('/en/', '/')} 
              class="text-green-100/80 hover:text-white transition-colors inline-flex items-center gap-2 group"
            >
              <span class="w-1.5 h-1.5 rounded-full bg-green-500/50 group-hover:bg-green-400 transition-colors"></span>
              {isArabic ? 'منتجاتنا' : 'Our Products'}
            </a>
          </li>
          <li>
            <a 
              href={`/${lang}/about`.replace('/en/', '/')} 
              class="text-green-100/80 hover:text-white transition-colors inline-flex items-center gap-2 group"
            >
              <span class="w-1.5 h-1.5 rounded-full bg-green-500/50 group-hover:bg-green-400 transition-colors"></span>
              {isArabic ? 'من نحن' : 'About Us'}
            </a>
          </li>
          <li>
            <a 
              href={`/${lang}/contact`.replace('/en/', '/')} 
              class="text-green-100/80 hover:text-white transition-colors inline-flex items-center gap-2 group"
            >
              <span class="w-1.5 h-1.5 rounded-full bg-green-500/50 group-hover:bg-green-400 transition-colors"></span>
              {isArabic ? 'اتصل بنا' : 'Contact Us'}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class={`space-y-6 ${isArabic ? 'text-right' : ''}`}>
        <h3 class="text-lg font-semibold text-white relative inline-block">
          {isArabic ? 'معلومات الاتصال' : 'Contact Info'}
          <div class="absolute -bottom-2 left-0 right-0 h-0.5 bg-green-500/30"></div>
        </h3>
        <ul class="space-y-4">
          <li class={`flex items-center gap-3 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-10 h-10 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center transition-colors">
              <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <a href="mailto:info@zagros.com" class="text-green-100/80 hover:text-white transition-colors">
              info@zagros.com
            </a>
          </li>
          <li class={`flex items-center gap-3 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-10 h-10 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center transition-colors">
              <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <a href="tel:+249123456789" class="text-green-100/80 hover:text-white transition-colors">
              +249 123 456 789
            </a>
          </li>
        </ul>
      </div>

      <!-- Branches -->
      <div class={`space-y-4 ${isArabic ? 'text-right' : ''}`}>
        <h3 class="text-lg font-semibold text-white relative inline-block">
          {isArabic ? 'فروعنا' : 'Our Branches'}
          <div class="absolute -bottom-2 left-0 right-0 h-0.5 bg-green-500/30"></div>
        </h3>
        <ul class="space-y-3">
          <li class={`flex items-start gap-2 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-8 h-8 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center mt-1 transition-colors">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-white text-sm">{isArabic ? 'بورتسودان' : 'Port Sudan'}</p>
              <p class="text-green-100/70 mt-0.5 text-xs">{isArabic ? 'ولاية البحر الأحمر' : 'Red Sea State'}</p>
            </div>
          </li>
          <li class={`flex items-start gap-2 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-8 h-8 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center mt-1 transition-colors">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-white text-sm">{isArabic ? 'القضارف' : 'Al Qadarif'}</p>
              <p class="text-green-100/70 mt-0.5 text-xs">{isArabic ? 'ولاية القضارف' : 'Al Qadarif State'}</p>
            </div>
          </li>
          <li class={`flex items-start gap-2 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-8 h-8 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center mt-1 transition-colors">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-white text-sm">{isArabic ? 'المناقل' : 'Al Managil'}</p>
              <p class="text-green-100/70 mt-0.5 text-xs">{isArabic ? 'ولاية الجزيرة' : 'Al Jazeera State'}</p>
            </div>
          </li>
          <li class={`flex items-start gap-2 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-8 h-8 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center mt-1 transition-colors">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-white text-sm">{isArabic ? 'الدامر' : 'Ad-Damar'}</p>
              <p class="text-green-100/70 mt-0.5 text-xs">{isArabic ? 'ولاية نهر النيل' : 'River Nile State'}</p>
            </div>
          </li>
          <li class={`flex items-start gap-2 group ${isArabic ? 'flex-row-reverse' : ''}`}>
            <div class="flex-shrink-0 w-8 h-8 bg-white/5 group-hover:bg-white/10 rounded-lg flex items-center justify-center mt-1 transition-colors">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-white text-sm">{isArabic ? 'الدبة' : 'Ad-Daba'}</p>
              <p class="text-green-100/70 mt-0.5 text-xs">{isArabic ? 'ولاية الشمالية' : 'Northern State'}</p>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 mt-8 border-t border-white/10">
      <div class={`flex ${isArabic ? 'flex-row-reverse' : ''} justify-between items-center flex-wrap gap-4`}>
        <p class="text-green-100/70">
          &copy; {new Date().getFullYear()} {isArabic ? companyData.company.name_ar : companyData.company.name}. 
          {isArabic ? 'جميع الحقوق محفوظة' : 'All rights reserved.'}
        </p>
        <div class={`flex items-center gap-6 ${isArabic ? 'flex-row-reverse' : ''}`}>
          <a href="#" class="text-green-100/70 hover:text-white transition-colors text-sm">
            {isArabic ? 'سياسة الخصوصية' : 'Privacy Policy'}
          </a>
          <a href="#" class="text-green-100/70 hover:text-white transition-colors text-sm">
            {isArabic ? 'الشروط والأحكام' : 'Terms & Conditions'}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Smooth transitions */
  a {
    transition: all 0.2s ease-in-out;
  }

  /* Gradient border animation */
  @keyframes borderFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-border {
    background: linear-gradient(90deg, transparent, rgba(34, 197, 94, 0.2), transparent);
    background-size: 200% 100%;
    animation: borderFlow 3s ease infinite;
  }
</style>
