---
import Layout from '../layouts/Layout.astro';
import { companyData } from '../data/company';

const { pesticides, fertilizers } = companyData.products;
---

<Layout title="Products">
	<div class="container mx-auto px-4 py-16">
		<h1 class="text-4xl font-bold text-center mb-16">Our Products</h1>

		<div class="mb-16">
			<h2 class="text-3xl font-bold mb-8">Pesticides</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				{pesticides.map(product => (
					<div class="bg-white p-6 rounded-lg shadow-lg">
						<img 
							src={product.image} 
							alt={product.name} 
							class="w-full h-48 object-cover rounded-lg mb-4"
						/>
						<h3 class="text-xl font-bold mb-2">{product.name}</h3>
						<p class="text-green-700 font-medium mb-2">{product.category}</p>
						<p class="text-gray-600">{product.description}</p>
					</div>
				))}
			</div>
		</div>

		<div>
			<h2 class="text-3xl font-bold mb-8">Fertilizers</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				{fertilizers.map(product => (
					<div class="bg-white p-6 rounded-lg shadow-lg">
						<img 
							src={product.image} 
							alt={product.name} 
							class="w-full h-48 object-cover rounded-lg mb-4"
						/>
						<h3 class="text-xl font-bold mb-2">{product.name}</h3>
						<p class="text-green-700 font-medium mb-2">{product.category}</p>
						<p class="text-gray-600">{product.description}</p>
					</div>
				))}
			</div>
		</div>
	</div>
</Layout>
