---
import Layout from '../../layouts/Layout.astro';
import { companyData } from '../../data/company';
---

<Layout>
	<div class="bg-green-700 text-white py-20">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-5xl font-bold mb-4">{companyData.company.name_ar}</h1>
			<p class="text-xl mb-8">{companyData.company.specialization_ar}</p>
			<div class="flex justify-center gap-4">
				<a href="/ar/contact" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-600">اتصل بنا</a>
				<a href="/ar/products" class="bg-white text-green-700 px-6 py-3 rounded-lg font-semibold hover:bg-green-100">منتجاتنا</a>
			</div>
		</div>
	</div>

	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">خدماتنا</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{companyData.company.services_ar.map(service => (
					<div class="bg-white p-6 rounded-lg shadow-lg text-right">
						<p class="text-lg">{service}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<section class="py-16">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">الشركاء الدوليون</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="bg-white p-6 rounded-lg shadow">
					<h3 class="text-xl font-bold mb-6 text-right">الأسمدة</h3>
					<div class="space-y-6">
						{companyData.company.international_linkages.fertilizers.map(partner => (
							<div class="flex items-center gap-4 flex-row-reverse">
								<img 
									src={`/partners/${partner.logo}`} 
									alt={partner.name_ar}
									class="w-24 h-16 object-contain"
									loading="lazy"
								/>
								<p class="text-lg">{partner.name_ar}</p>
							</div>
						))}
					</div>
				</div>
				<div class="bg-white p-6 rounded-lg shadow">
					<h3 class="text-xl font-bold mb-6 text-right">المبيدات</h3>
					<div class="space-y-6">
						{companyData.company.international_linkages.pesticides.map(partner => (
							<div class="flex items-center gap-4 flex-row-reverse">
								<img 
									src={`/partners/${partner.logo}`} 
									alt={partner.name_ar}
									class="w-24 h-16 object-contain"
									loading="lazy"
								/>
								<p class="text-lg">{partner.name_ar}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">عملاؤنا الموثوقون</h2>
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
				{companyData.customers.map(customer => (
					<div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-center justify-center transition-transform hover:scale-105">
						<img 
							src={`/trusted-customer-logos/${customer.logo}`} 
							alt={customer.name_ar}
							class="w-full h-24 object-contain mb-4"
							loading="lazy"
						/>
						<p class="font-medium text-center">{customer.name_ar}</p>
					</div>
				))}
			</div>
		</div>
	</section>
</Layout>
