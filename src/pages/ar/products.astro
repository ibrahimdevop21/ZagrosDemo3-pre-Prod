---
import Layout from '../../layouts/Layout.astro';
import productsData from '../../data/products.json';
import { useTranslations } from '../../i18n/utils';

const { pesticides, fertilizers } = productsData;
const t = useTranslations('ar');
---

<Layout title={t('products.title')}>
	<div class="min-h-screen bg-gradient-to-b from-green-50 to-white">
		<!-- Hero Section -->
		<div class="relative overflow-hidden bg-green-900 text-white py-24">
			<div class="absolute inset-0 bg-[url('/hero-pattern.png')] opacity-10"></div>
			<div class="container mx-auto px-4 relative">
				<h1 class="text-5xl md:text-6xl font-bold text-center mb-6">{t('products.heading')}</h1>
				<p class="text-lg md:text-xl text-center text-green-100 max-w-2xl mx-auto">{t('products.subheading')}</p>
			</div>
		</div>

		<div class="container mx-auto px-4 py-16">
			<!-- Pesticides Section -->
			<section class="mb-24">
				<div class="flex items-center justify-between mb-12">
					<h2 class="text-4xl font-bold text-green-900">{t('products.pesticides')}</h2>
					<div class="h-1 flex-grow mr-8 bg-gradient-to-l from-green-600 to-transparent rounded"></div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					{pesticides.map(product => (
						<div class="group bg-white rounded-2xl shadow-xl overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
							<div class="relative">
								<img 
									src={product.image} 
									alt={product.name.ar} 
									class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
								/>
								<div class="absolute top-4 left-4 bg-green-600 text-white px-4 py-1 rounded-full text-sm font-medium">
									{product.type.ar}
								</div>
							</div>
							<div class="p-8">
								<h3 class="text-2xl font-bold text-gray-900 mb-3">{product.name.ar}</h3>
								<p class="text-green-700 font-medium mb-4 flex items-center">
									<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
										<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
									</svg>
									{product.category.ar}
								</p>
								<p class="text-gray-600 mb-6">{product.description.ar}</p>
								<div class="text-sm text-gray-500">
									<strong class="text-gray-700">{t('products.usage')}:</strong> {product.usage.ar}
								</div>
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- Fertilizers Section -->
			<section>
				<div class="flex items-center justify-between mb-12">
					<h2 class="text-4xl font-bold text-green-900">{t('products.fertilizers')}</h2>
					<div class="h-1 flex-grow mr-8 bg-gradient-to-l from-green-600 to-transparent rounded"></div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					{fertilizers.map(product => (
						<div class="group bg-white rounded-2xl shadow-xl overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
							<div class="relative">
								<img 
									src={product.image} 
									alt={product.name.ar} 
									class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
								/>
								<div class="absolute top-4 left-4 bg-green-600 text-white px-4 py-1 rounded-full text-sm font-medium">
									{product.composition.ar}
								</div>
							</div>
							<div class="p-8">
								<h3 class="text-2xl font-bold text-gray-900 mb-3">{product.name.ar}</h3>
								<p class="text-green-700 font-medium mb-4 flex items-center">
									<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
										<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
									</svg>
									{product.category.ar}
								</p>
								<p class="text-gray-600 mb-6">{product.description.ar}</p>
								<div class="text-sm text-gray-500">
									<strong class="text-gray-700">{t('products.usage')}:</strong> {product.usage.ar}
								</div>
							</div>
						</div>
					))}
				</div>
			</section>
		</div>
	</div>
</Layout>
