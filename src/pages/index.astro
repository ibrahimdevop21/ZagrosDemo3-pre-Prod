---
import Layout from '../layouts/Layout.astro';
import { companyData } from '../data/company.js';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import Carousel from '../components/home/Carousel';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isArabic = lang === 'ar';
const dir = isArabic ? 'rtl' : 'ltr';
---

<Layout>
  <!-- Hero Section with Carousel -->
  <div class="relative overflow-hidden bg-gradient-to-b from-emerald-900 to-emerald-800 dark:from-emerald-950 dark:to-emerald-900 pt-16">
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]">
      <div class="absolute inset-0 bg-gradient-to-r from-emerald-800/30 to-emerald-900/30 backdrop-blur-[1px]"></div>
    </div>
    <div dir={dir} class="relative">
      <Carousel client:only="react" isArabic={isArabic} />
    </div>
  </div>

  <!-- Services Section with Modern Cards -->
  <section class="py-32 relative overflow-hidden dark:bg-gray-900">
    <div class="absolute inset-0 bg-[linear-gradient(135deg,theme(colors.emerald.50)_0%,transparent_50%)] dark:bg-[linear-gradient(135deg,theme(colors.emerald.900)_0%,transparent_50%)] opacity-40"></div>
    <div class="absolute -left-1/4 top-0 w-1/2 h-1/2 bg-emerald-100/20 dark:bg-emerald-800/20 rounded-full blur-3xl"></div>
    <div class="absolute -right-1/4 bottom-0 w-1/2 h-1/2 bg-emerald-100/20 dark:bg-emerald-800/20 rounded-full blur-3xl"></div>
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-emerald-800 to-emerald-600 bg-clip-text text-transparent mb-6">
          {t('home.services.title')}
        </h2>
        <div class="h-1.5 w-24 bg-gradient-to-r from-emerald-500 to-emerald-300 mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t('home.services.items').map((service, index) => (
          <div class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/5 to-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="bg-gradient-to-br from-emerald-100 to-emerald-50 w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
                {index === 0 && (
                  <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                )}
                {index === 1 && (
                  <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {index === 2 && (
                  <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4 group-hover:text-emerald-700 transition-colors duration-300">
                {service}
              </h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-emerald-800 dark:text-emerald-400">{t('home.partners.title')}</h2>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">Working with leading agricultural companies worldwide to bring you the best solutions.</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {[
          {
            key: 'seeds',
            icon: 'M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25',
            partners: [...companyData.company.international_linkages.seeds, ...companyData.company.international_linkages.forage_crops_seeds]
          },
          {
            key: 'fertilizers',
            icon: 'M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z',
            partners: companyData.company.international_linkages.fertilizers
          },
          {
            key: 'pesticides',
            icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z',
            partners: companyData.company.international_linkages.pesticides
          }
        ].map(category => (
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg overflow-hidden">
            <div class="p-6 border-b border-gray-100 dark:border-gray-700">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-emerald-100 dark:bg-emerald-900/30 rounded-lg">
                  <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.icon} />
                  </svg>
                </div>
                <h3 class="text-xl font-bold dark:text-white">{t(`home.partners.${category.key}`)}</h3>
              </div>
            </div>
            <div class="p-6">
              <div class="grid grid-cols-1 gap-6">
                {category.partners.map(partner => (
                  <div class="group p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300">
                    <div class="flex items-center gap-4">
                      <div class="relative w-16 h-16 bg-white dark:bg-gray-700 rounded-lg p-2 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <img
                          src={`/partners/${partner.logo}`}
                          alt={partner.name}
                          class="w-12 h-12 object-contain"
                          loading="lazy"
                        />
                      </div>
                      <div>
                        <h4 class="font-semibold dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-300">{partner.name}</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400">{partner.country}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Customers Section -->
  <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-emerald-800 dark:text-emerald-400">{t('home.customers.title')}</h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {companyData.customers.map(customer => (
          <div class="group bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-emerald-900/20 p-8 flex flex-col items-center justify-center transition-all duration-500 hover:shadow-xl dark:hover:shadow-emerald-900/30 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/5 to-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <img 
              src={`/trusted-customer-logos/${customer.logo}`} 
              alt={isArabic ? customer.name_ar : customer.name}
              class="relative z-10 w-28 h-28 object-contain transition-transform duration-500 group-hover:scale-110 mb-4"
              loading="lazy"
            />
            <p class="relative z-10 font-medium text-center group-hover:text-emerald-700 transition-colors duration-300">
              {isArabic ? customer.name_ar : customer.name}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  </div>
</Layout>
